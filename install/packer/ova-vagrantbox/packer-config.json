{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "source.ova",
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_wait_timeout": "30m",
      "format": "ova",
      "shutdown_command": "shutdown -h now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
          "yum -y install ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "playbook.yml",
      "role_paths": [
        "../../ansible/roles/vagrantbox"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "yum -y remove ansible"
      ]
    }
  ],
  "post-processors": ["vagrant"]
}
